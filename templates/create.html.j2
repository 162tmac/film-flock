{% extends "layout.html.j2" %}
{% block title %}Film Flock | Create{% endblock %}
{% block body %}
  <div class="min-vh-100 py-4">
    <div class="container">
      <h1>Create</h1>
      <form method="post">
        <div class="form-group">
          <label for="collectionName">Step 1 - Your Collection Name</label>
          <input class="form-control" type="text" placeholder='Example: "My top feel good movies..."' name="name">
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Step 2 - Add Movies to Collection</label>
          <input class="w-25 mr-3" type="text" name="query" id="search" placeholder="Search Movies">
        </div>
        <div class="container p-0">
              <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-5 g-2 g-lg-2">
                {% for film in films %}
                  <a href={{ url_for("film_view", id=film["_id"]) }} class="col mb-4">
                    <div class="card h-100">
                      <img src="../static/flock-of-birds.png" class="card-img-top h-75" alt="...">
                      <div class="card-body h-25">
                        <h5 class="card-title">{{film.title}}</h5>  
                      </div>
                    </div>
                  </a>
                {% endfor %}
              </div>
            </div>
        <button type="submit" class="btn btn-primary">Create Collection</button>
      </form>
    </div>
  </div>

{% endblock %}
