{% extends "layout.html.j2" %}
{% block title %}Film Flock | My Collections{% endblock %}
{% block body %}
  <div class="min-vh-100 py-4">
    <div class="container">
      <h1>My Flocks</h1>
      <div class="container row p-0">
        <div class="col-12">
          <h2>Movie collections created by me</h2>
            <div class="container p-0">
              <div class="row row-cols-1 row-cols-lg-4 g-2 g-lg-2">
                {% for flock in flocks %}
                  <a href={{ url_for("flocks", id=flock["_id"]) }} class="col mb-4">
                    <div class="card h-100">
                      <img src="../static/flock-of-birds.png" class="card-img-top h-75" alt="...">
                      <div class="card-body h-25">
                        <h5 class="card-title">{{ flock.name }}</h5>
                      </div>
                    </div>
                  </a>
                {% endfor %}
                <div class="col mb-4">
                  <div class="card h-100">
                    <div class="card-body text-center">
                      <h5 class="card-title">Create</h5>
                      <a href="{{ url_for('create') }}" class="btn btn-primary">Create a new collection</a>
                    </div>
                  </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
